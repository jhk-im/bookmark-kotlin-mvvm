<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- default color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">#ffffff</item>
        <item name="custom_text">@color/colorPrimaryDark</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition" tools:ignore="NewApi">@transition/explode</item>
        <item name="android:windowExitTransition" tools:ignore="NewApi">@transition/explode</item>

        <!-- Set the transitions which are used for the entrance and exit of shared elements -->
        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">
            @transition/change_image_transform</item>

    </style>
    <!-- popup theme -->
    <style name="AppTheme.Popup" parent="Base.PopupTheme" />
    <style name="Base.PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- default color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">#ffffff</item>
        <item name="custom_text">@color/colorPrimaryDark</item>
        <!-- 타이틀 바 제거 -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Bridge" />

    <!-- Dark Theme Popup -->
    <style name="DarkAppPopup" parent="Base.PopupTheme">
        <item name="colorPrimary">#26518a</item>
        <item name="colorPrimaryDark">#353738</item>
        <item name="colorAccent">#8e4ab1</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">@color/colorPrimaryDark</item>
        <item name="custom_text">#ffffff</item>
        <!-- 타이틀 바 제거 -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Dark Theme Main , Item touch-->
    <style name="DarkAppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">#26518a</item>
        <item name="colorPrimaryDark">#353738</item>
        <item name="colorAccent">#8e4ab1</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">@color/colorPrimaryDark</item>
        <item name="custom_text">#ffffff</item>
    </style>

</resources>