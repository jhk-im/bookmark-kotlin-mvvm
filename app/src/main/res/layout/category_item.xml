<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View.OnClickListener" />

        <variable
            name="category"
            type="com.example.bookmarkse_kotlin.data.Category" />

        <variable
            name="listener"
            type="com.example.bookmarkse_kotlin.bookmark.ItemUserActionsListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/category_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{category.title}"
            android:onClick="@{() -> listener.onCategoryClicked(category)}"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>